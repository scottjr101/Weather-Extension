{
  "manifest_version": 2,
  "name": "5 Day Weather Forecast",
  "description": "This is a extension to show you a 5 day weather forecast from the Openweather API",
  "version": "0.0.1",
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "5 Day Weather Forecast"
  },
  "icons": {
    "16": "./images/cloud-icon-16.png",
    "48": "./images/cloud-icon-48.png",
    "128": "./images/cloud-icon-128.png"
  },
  "content_security_policy": "script-src 'self' 'sha256-BK8G/M6YQykjkwexBgjFK237rqvYrjveyfTKj86wzCY='; object-src 'self'",
  "permissions": [
  ]
}
